// Place your settings in this file to overwrite the default settings
{
    // jdk setting on macOS
    "java.home": "/Library/Java/JavaVirtualMachines/jdk1.8.0_231.jdk/Contents/Home",

    "editor.formatOnSave": false,
    "editor.rulers": [
        80
    ],
    "editor.tabSize": 2,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "k"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo",
                    "when": "editorTextFocus && !editorReadonly"
                }
            ]
        },
        {
            "before": [
                "ctrl+r"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo",
                    "when": "editorTextFocus && !editorReadonly"
                }
            ]
        }
    ],
    "vim.enableNeovim": true,
    // "vim.neovimPath": "/usr/bin/nvim",
    // "vim.neovimPath": "/Users/ttl/.local/bin/nvim",
    // https://github.com/VSCodeVim/Vim/issues/3584
    // leaving neovimPath empty would cause error: Configuration: Invalid neovimPath. The argument 'file' cannot be empty. Received ''.
    "vim.neovimPath": "nvim",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    // ignore case when searching
    "vim.ignorecase": true,
    "vim.autoindent": true,
    "editor.minimap.enabled": false,
    "workbench.colorCustomizations": {
        // make warning color less in-your-face
        "editorWarning.foreground": "#535353"
    },
    // show full path of the current editing file
    "window.title": "${activeEditorLong}",
    // "rust.rustup": {
    //     "toolchain": "nightly-x86_64-apple-darwin",
    //     "nightlyToolchain": "nightly-x86_64-apple-darwin"
    // },
    // "rust.mode": "rls",
    "rust-client.updateOnStartup": false,
    "rust-client.showStdErr": true,
    "rust.build_lib": false,
    // "rust.rustLangSrcPath": "/Users/ttl/.rustup/toolchains/nightly-x86_64-apple-darwin/lib/rustlib/src/rust/src",
    // "rust.rls": {
    //     "executable": "/Users/tung/dev/rust/libs/rls/target/release/rls",
    //     "useRustfmt": false
    // },
    // "rust.rls": {
    //     "executable": "rustup",
    //     "args": [
    //         "run",
    //         "nightly",
    //         "rls"
    //     ],
    //     "useRustfmt": false
    // },
    "vim.disableAnnoyingNeovimMessage": true,
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.colorTheme": "One Dark Pro",
    "telemetry.enableTelemetry": false,
    "workbench.sideBar.location": "left",
    "[json]": {
        // "editor.tabSize": 4
    },
    // disable split xmlns to new line
    "xmlTools.splitXmlnsOnFormat": false,
    // open file from quickopen dialog in new tab
    "workbench.editor.enablePreviewFromQuickOpen": false,
    // open new tab for go-to-definition
    "workbench.editor.enablePreview": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "[html]": {
        "editor.tabSize": 2,
        // Insert spaces when pressing Tab
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    "[rust]": {
        "editor.tabSize": 4,
        // Insert spaces when pressing Tab
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": true,
    },
    "[python]": {
        "editor.tabSize": 4,
        "files.trimTrailingWhitespace": true,
        "editor.formatOnSave": true,
    },
    "gitlens.keymap": "alternate",
    "breadcrumbs.enabled": true,
    "r.lintr.enabled": false,
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14,
    "window.zoomLevel": 0,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "ruby.format": "rubocop",
    "telemetry.enableCrashReporter": false,
    "viceroy.config.lastVersion": "0.31.200710",
    "files.watcherExclude": {
        "**/build/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/env/**": true,
        "/": true,
        "build": true
    },
    "files.exclude": {
        ".viceroy": true,
        "apollo-overrides": true,
        "release-info": true,
        "src/*/build": false,
        "build": true,
        "env": true,
        "packageInfo*": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.classpath": true,
        "**/.factorypath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/build/**": true,
        "**/env/**": true
    },
    "search.exclude": {
        "env": true,
        "src/*/build": true,
        "build": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "viceroy.config.internal.lastUpdateTime": "2020-06-24T03:40:12.822Z",
    "viceroy.config.internal.zeroDowntimeColour": "blue",
    "viceroy.doc.welcome.showAtStartup": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // disable jedi to use language server. However viceroy wont't be able to resolve python paths
    // Workaround by setting `"python.jediEnabled": true` at workspace level
    "python.jediEnabled": false,
    "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/Users/ttl/.vscode/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
    "plantuml.render": "Local",
    "plantuml.exportFormat": "svg",
    "plantuml.exportSubFolder": false,
    "terminal.integrated.inheritEnv": false,
    "ruby.intellisense": "rubyLocate",
    "editor.largeFileOptimizations": false,
    "plantuml.urlFormat": "svg",
    "python.languageServer": "Microsoft",
    "workbench.tree.indent": 20,
    "vscode-neovim.neovimPath": "/Users/ttl/.local/bin/nvim",
    "vscode-neovim.neovimInitPath": "/Users/ttl/.config/nvim/init.vim"
}
